<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epicodus.meetuplist.MainActivity"
    android:background="#000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/meetup"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MeetupList"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textColor="@color/colorTextIcons"
        android:textSize="35sp"
        android:textStyle="bold"
        android:id="@+id/AppNameTextView"
        android:background="#000"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Events"
        android:id="@+id/FindEventsButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:layout_marginBottom="61dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Saved Events"
        android:id="@+id/savedEventsButton"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InterestEditText"
        android:background="@color/colorTextIcons"
        android:layout_above="@+id/FindEventsButton"
        android:hint=" Find Interest "
        android:padding="5dp"
        android:layout_marginBottom="27dp"
        android:layout_gravity="left"
        android:layout_marginLeft="45dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LocationEditText"
        android:background="@color/colorTextIcons"
        android:layout_above="@+id/FindEventsButton"
        android:hint="   Zip Code   "
        android:padding="5dp"
        android:layout_marginBottom="27dp"
        android:layout_gravity="left"
        android:layout_marginLeft="222dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="near"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/InterestEditText"
        android:layout_toLeftOf="@+id/LocationEditText"
        android:layout_toRightOf="@+id/InterestEditText"
        android:layout_toEndOf="@+id/InterestEditText"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="3dp"
        android:textSize="20dp" />
</RelativeLayout>
